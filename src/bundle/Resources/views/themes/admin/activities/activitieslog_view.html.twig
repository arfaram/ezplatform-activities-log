{% extends "@ezdesign/ui/layout.html.twig" %}

{% trans_default_domain 'activities' %}

{% block title %}{{ 'activities.log.view'|trans|desc('Activities Log') }}{% endblock %}

{% block content %}
    <div class="row align-items-stretch ez-main-row">

        <div class="px-0 ez-content-container">
            <section class="container mt-5">

                {% if access_denied is defined %}
                    {{ 'activities.log.access_denied'|trans|desc('You are not allowed to manage activities. ') }}
                {% else %}

                    <div class="display-results">

                        {% include '@ezdesign/activities/activitieslog_table.html.twig' %}

                    </div>
                    {% if pagination.haveToPaginate %}
                        {{  include('@ezdesign/ui/pagination.html.twig', {
                            'pager': pagination,
                            'paginaton_params': {
                                'pageParameter': '[page]'
                            }
                        }) }}
                    {% endif %}
                {% endif %}
            </section>
        </div>
    </div>
{% endblock %}


{% block javascripts %}

{% endblock %}


